{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan DSL Schema",
  "description": "Schema for typed plans with capabilities, constraints, and validation",
  "type": "object",
  "required": ["plan_id", "tenant", "subject", "steps", "constraints", "system_prompt_hash", "input_channels"],
  "properties": {
    "plan_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the plan"
    },
    "tenant": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Tenant identifier for multi-tenancy"
    },
    "subject": {
      "type": "object",
      "required": ["id", "caps"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Subject identifier"
        },
        "caps": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Capabilities possessed by the subject"
        }
      }
    },
    "input_channels": {
      "type": "object",
      "required": ["system", "user"],
      "properties": {
        "system": {
          "type": "object",
          "required": ["hash", "policy_hash"],
          "properties": {
            "hash": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA-256 hash of system prompt"
            },
            "policy_hash": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA-256 hash of policy configuration"
            }
          },
          "description": "Trusted system channel - cannot be modified by untrusted inputs"
        },
        "user": {
          "type": "object",
          "required": ["content_hash", "quoted"],
          "properties": {
            "content_hash": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA-256 hash of user content"
            },
            "quoted": {
              "type": "boolean",
              "description": "Must be true for untrusted user input"
            }
          },
          "description": "Untrusted user channel - must be quoted and cannot alter instructions"
        },
        "retrieved": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["receipt_id", "content_hash", "quoted", "labels"],
            "properties": {
              "receipt_id": {
                "type": "string",
                "description": "Access receipt identifier"
              },
              "content_hash": {
                "type": "string",
                "pattern": "^[a-fA-F0-9]{64}$",
                "description": "SHA-256 hash of retrieved content"
              },
              "quoted": {
                "type": "boolean",
                "description": "Must be true for untrusted retrieved content"
              },
              "labels": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Labels associated with retrieved content"
              }
            }
          },
          "description": "Untrusted retrieved content - must be quoted and labeled"
        },
        "file": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["sha256", "media_type", "quoted"],
            "properties": {
              "sha256": {
                "type": "string",
                "pattern": "^[a-fA-F0-9]{64}$",
                "description": "SHA-256 hash of file content"
              },
              "media_type": {
                "type": "string",
                "description": "MIME type of the file"
              },
              "quoted": {
                "type": "boolean",
                "description": "Must be true for untrusted file content"
              }
            }
          },
          "description": "Untrusted file content - must be quoted and typed"
        }
      },
      "description": "Input channel classification for injection hardening"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool", "args", "caps_required", "labels_in", "labels_out"],
        "properties": {
          "tool": {
            "type": "string",
            "description": "Tool identifier to be called"
          },
          "args": {
            "type": "object",
            "description": "Arguments for the tool call"
          },
          "caps_required": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Capabilities required for this step"
          },
          "labels_in": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Input labels for this step"
          },
          "labels_out": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Output labels for this step"
          },
          "receipts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "receipt_id": {"type": "string"},
                "tenant": {"type": "string"},
                "subject_id": {"type": "string"},
                "query_hash": {"type": "string"},
                "index_shard": {"type": "string"},
                "timestamp": {"type": "integer"},
                "result_hash": {"type": "string"},
                "sign_alg": {"type": "string"},
                "sig": {"type": "string"}
              }
            },
            "description": "Access receipts for retrieval steps"
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "required": ["budget", "pii", "dp_epsilon"],
      "properties": {
        "budget": {
          "type": "number",
          "minimum": 0,
          "description": "Budget limit in USD"
        },
        "pii": {
          "type": "boolean",
          "description": "Whether PII is allowed"
        },
        "dp_epsilon": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "Differential privacy epsilon parameter"
        },
        "dp_delta": {
          "type": "number",
          "minimum": 0,
          "maximum": 1e-5,
          "description": "Differential privacy delta parameter"
        },
        "latency_max": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum allowed latency in seconds"
        }
      }
    },
    "system_prompt_hash": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{64}$",
      "description": "SHA-256 hash of the system prompt"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Plan creation timestamp"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Plan expiration timestamp"
    }
  }
} 