{
  "redis_url": "redis://localhost:6379",
  "ledger_url": "http://localhost:4000",
  "kube_config": "~/.kube/config",
  "helm_chart_path": "chart",
  "quote_service_url": "http://localhost:8080",
  "s3_bucket": "provability-fabric-evidence",
  "bigquery_project": "provability-fabric",
  "github_token": "your-github-token",
  "edge_api_endpoints": [
    "https://api.us-west.provability-fabric.org",
    "https://api.us-east.provability-fabric.org",
    "https://api.eu-west.provability-fabric.org"
  ],
  "test_tenants": {
    "acme-beta": {
      "epsilon_limit": 5.0,
      "delta_limit": 0.1,
      "reset_period_hours": 24
    }
  },
  "chaos_experiments": {
    "cpu_hog": {
      "duration": "30s",
      "target_pods": ["pf-sidecar", "pf-admission-controller"]
    },
    "network_loss": {
      "duration": "60s",
      "loss_percentage": 50
    }
  },
  "performance_thresholds": {
    "p95_latency_ms": 90,
    "error_rate_percent": 0.5,
    "cache_hit_ratio": 0.20,
    "cold_start_p95_ms": 250,
    "mttr_seconds": 300,
    "proof_fuzz_coverage_percent": 95
  },
  "security_gates": {
    "prohibited_syscalls": [
      "sock_open",
      "sock_send",
      "sock_recv",
      "sock_shutdown",
      "proc_exec",
      "fd_pread",
      "fd_pwrite",
      "random_get",
      "clock_time_get"
    ],
    "required_controls": [
      "CC1.1",
      "CC6.3", 
      "CC7.2",
      "ISO42001-7.4b"
    ]
  },
  "monitoring": {
    "grafana_dashboard": "Incidents & Rollbacks",
    "prometheus_endpoint": "http://localhost:9090",
    "alertmanager_endpoint": "http://localhost:9093"
  },
  "compliance": {
    "soc2_controls": [
      "CC1.1",
      "CC6.3",
      "CC7.2"
    ],
    "iso42001_controls": [
      "ISO42001-7.4b"
    ]
  }
}