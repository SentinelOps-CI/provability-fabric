{
  "dashboard": {
    "id": null,
    "title": "Policy Enforcement Dashboard",
    "tags": ["policy", "enforcement", "slo"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Certificate Integrity",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(certs_verified_total[5m]) / rate(certs_total[5m]) * 100",
            "legendFormat": "Verification Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "NI Monitor Reject Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(ni_monitor_rejects_total[5m])",
            "legendFormat": "Reject Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Permission Reject Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(permit_rejects_total[5m])",
            "legendFormat": "Permission Rejects"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Monitor Performance (P95)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(monitor_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency (ms)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Replay Determinism",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(replay_deterministic_total[5m]) / rate(replay_total[5m]) * 100",
            "legendFormat": "Determinism Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Egress Bytes Labeled",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(egress_bytes_labeled_total[5m])",
            "legendFormat": "Bytes/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "bytes"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Enforcement Mode Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (mode) (enforcement_mode_total)",
            "legendFormat": "{{mode}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Revocation Statistics",
        "type": "stat",
        "targets": [
          {
            "expr": "revocation_total",
            "legendFormat": "Total Revocations"
          },
          {
            "expr": "revocation_active",
            "legendFormat": "Active Revocations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": [],
    "annotations": {
      "list": []
    }
  }
}
