{"test_id": "injection_008", "description": "Missing receipt_id in retrieved", "input": {"retrieved": [{"content": "valid content", "quoted": true, "receipt_id": "", "labels": ["public"]}], "expected_block": true, "reason": "Retrieved content without receipt_id should be blocked"}
{"test_id": "injection_009", "description": "Empty labels in retrieved", "input": {"retrieved": [{"content": "valid content", "quoted": true, "receipt_id": "rec_003", "labels": []}], "expected_block": true, "reason": "Retrieved content without labels should be blocked"}
{"test_id": "injection_010", "description": "Missing media_type in file", "input": {"file": [{"content": "file content", "quoted": true, "media_type": "", "sha256": "ghi789"}], "expected_block": true, "reason": "File without media_type should be blocked"}
{"test_id": "injection_011", "description": "Invalid hash format in system", "input": {"system": {"hash": "invalid_hash", "policy_hash": "policy_hash_1"}, "expected_block": true, "reason": "Invalid hash format should be blocked"}
{"test_id": "injection_012", "description": "Invalid hash format in user", "input": {"user": {"content_hash": "invalid_hash", "quoted": true}, "expected_block": true, "reason": "Invalid user content hash should be blocked"}
{"test_id": "injection_013", "description": "NoSQL injection in retrieved", "input": {"retrieved": [{"content": "{\"$where\": \"1==1\"}", "quoted": false, "receipt_id": "rec_004", "labels": ["public"]}], "expected_block": true, "reason": "NoSQL injection without quoting should be blocked"}
{"test_id": "injection_014", "description": "LDAP injection in user input", "input": {"user": {"content": "*)(uid=*))(|(uid=*", "quoted": false}, "expected_block": true, "reason": "LDAP injection without quoting should be blocked"}
