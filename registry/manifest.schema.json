{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Provability-Fabric Package Manifest",
  "description": "Schema for marketplace packages including adapters, specs, and proof packs",
  "type": "object",
  "required": ["name", "version", "type", "compatibility", "description", "author"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Package name (lowercase, hyphens only)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?(\\+[a-zA-Z0-9.-]+)?$",
      "description": "Semantic version (e.g., 1.2.3, 2.0.0-alpha.1)"
    },
    "type": {
      "type": "string",
      "enum": ["adapter", "spec", "proofpack"],
      "description": "Package type"
    },
    "compatibility": {
      "type": "object",
      "required": ["fabric-version"],
      "properties": {
        "fabric-version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.-]+)?$",
          "description": "Minimum required Fabric version"
        },
        "adapters": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required adapter dependencies"
        },
        "specs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required spec dependencies"
        }
      }
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Package description"
    },
    "author": {
      "type": "string",
      "description": "Package author or organization"
    },
    "license": {
      "type": "string",
      "default": "Apache-2.0",
      "description": "License identifier"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source repository URL"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Package homepage"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Search keywords"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "hash"],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to package root"
          },
          "hash": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$",
            "description": "SHA256 hash of file content"
          },
          "size": {
            "type": "integer",
            "minimum": 0,
            "description": "File size in bytes"
          }
        }
      },
      "description": "Package file manifest with hashes"
    },
    "metadata": {
      "type": "object",
      "description": "Type-specific metadata",
      "oneOf": [
        {
          "if": {
            "properties": { "type": { "const": "adapter" } }
          },
          "then": {
            "properties": {
              "runtime": {
                "type": "string",
                "enum": ["python", "go", "rust", "node"],
                "description": "Adapter runtime"
              },
              "entrypoint": {
                "type": "string",
                "description": "Main entry point"
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Runtime dependencies"
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "spec" } }
          },
          "then": {
            "properties": {
              "requirements": {
                "type": "integer",
                "minimum": 0,
                "description": "Number of requirements"
              },
              "assumptions": {
                "type": "integer",
                "minimum": 0,
                "description": "Number of assumptions"
              },
              "proofs": {
                "type": "integer",
                "minimum": 0,
                "description": "Number of proofs"
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "proofpack" } }
          },
          "then": {
            "properties": {
              "tools": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Proof tools included"
              },
              "specs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Included specifications"
              }
            }
          }
        }
      ]
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "downloads": {
      "type": "integer",
      "minimum": 0,
      "description": "Download count"
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5,
      "description": "Average rating (0-5)"
    }
  },
  "additionalProperties": false
}